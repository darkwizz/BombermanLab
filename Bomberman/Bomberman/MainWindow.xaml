<Window x:Class="Bomberman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bomberman"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="320"
        Width="480"
        SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill"
                        ImageSource="Assets/background/wood.jpg" />
        </Grid.Background>
        <Grid x:Name="GameGridContainer"
              Margin="20">
            <Grid x:Name="GameMapGrid">
                <Grid.Background>
                    <ImageBrush ImageSource="Assets/background/asphalt.jpg"
                                Stretch="UniformToFill" />
                </Grid.Background>
            </Grid>
            <Grid x:Name="GameForegroundGrid"
                  Width="{Binding ElementName=GameMapGrid, Path=ActualWidth}"
                  Height="{Binding ElementName=GameMapGrid,Path=ActualHeight}">
                <Border BorderBrush="Black"
                        BorderThickness="1"/>
                <Canvas x:Name="GameForegroundCanvas" />
            </Grid>
            <Grid x:Name="GameGridOrient" />
        </Grid>
    </Grid>
</Window>
